---
/**
 * @deprecated This component is deprecated. Use Footer.astro from @/components/layout/Footer.astro instead.
 *
 * Migration example:
 * ```astro
 * import Footer from '@/components/layout/Footer.astro';
 *
 * <Footer
 *   layout="simple"
 *   background="secondary"
 *   showCopyright={false}
 * />
 * ```
 */
import Logo from '@/components/ui/marketing/Logo/Logo.astro';

const links = [
  { label: 'Documentation', href: '/blog' },
  { label: 'GitHub', href: 'https://github.com/southwellmedia/velocity' },
  { label: 'Twitter', href: 'https://twitter.com/southwellmedia' },
  { label: 'License', href: 'https://github.com/southwellmedia/velocity/blob/main/LICENSE' },
];
---

<footer class="border-t border-border bg-background-secondary py-[var(--space-stack-lg)]">
  <div class="mx-auto max-w-6xl px-6 flex flex-col md:flex-row justify-between items-center gap-[var(--space-stack-lg)]">
    <!-- Logo & Attribution -->
    <div class="flex flex-col gap-2">
      <a href="/" class="flex items-center gap-2">
        <Logo size="sm" />
        <span class="font-display text-lg font-bold text-brand-500">Velocity</span>
      </a>
    </div>

    <!-- Links -->
    <nav class="flex gap-[var(--space-stack-lg)] text-sm text-foreground-muted font-medium">
      {links.map((link) => (
        <a
          href={link.href}
          class="hover:text-foreground transition-colors"
          target={link.href.startsWith('http') ? '_blank' : undefined}
          rel={link.href.startsWith('http') ? 'noopener noreferrer' : undefined}
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</footer>
